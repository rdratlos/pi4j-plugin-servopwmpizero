<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.pi4j</groupId>
        <artifactId>pi4j-parent</artifactId>
        <version>2.6.3-SNAPSHOT</version>
    </parent>

    <!-- MAVEN ARTIFACT INFORMATION -->
    <groupId>com.pi4j.plugin.addonboard</groupId>
    <artifactId>pi4j-plugin-servopwmpi</artifactId>
    <name>Pi4J :: PLUGIN   :: Servo PWM PI Add-on Board</name>
    <description>Pi4J Plugin for the Servo PWM Pi Raspberry Pi expansion board</description>
    <version>2.6.3-SNAPSHOT</version>
    <packaging>jar</packaging>

    <!-- SOURCE CONTROL -->
    <scm>
        <developerConnection>scm:git:ssh://${server.scm.ssh.user}@${server.scm.host}/${server.scm.project}/pi4j-plugin-servopwmpi.git</developerConnection>
        <connection>scm:git:https://${server.scm.host}/${server.scm.project}/pi4j-plugin-servopwmpi.git</connection>
        <url>https://${server.scm.host}/${server.scm.project}/pi4j-plugin-servopwmpi.git</url>
        <tag>HEAD</tag>
    </scm>

    <!-- DEPENDENCIES -->
    <dependencies>
        <dependency>
            <groupId>com.pi4j</groupId>
            <artifactId>pi4j-core</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>com.pi4j</groupId>
            <artifactId>pi4j-plugin-linuxfs</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
    </dependencies>

        <!-- STANDARD BUILD INSTRUCTIONS -->
    <build>
        <resources>
            <resource>
                <directory>${project.build.directory}</directory>
                <filtering>false</filtering>
                <includes>
                    <include>LICENSE</include>
                    <include>NOTICE.txt</include>
                    <include>README.md</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/**</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <!-- JAVA COMPILER -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
            </plugin>

            <!-- INCLUDE SOURCE JAR -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>${maven-source-plugin.version}</version>
            </plugin>

            <!-- INCLUDE JAVADOC JAR -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>${maven-javadoc-plugin.version}</version>
            </plugin>

        </plugins>
    </build>
</project>
